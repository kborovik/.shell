{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#e5c07b",
          "style": "plain",
          "template": "{{ .UserName }}@{{ .HostName }} ",
          "type": "session"
        },
        {
          "foreground": "#61afef",
          "style": "plain",
          "properties": {
            "style": "full"
          },
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_worktree_count": true
          },
          "style": "plain",
          "template": "<#e5c07b>git</>:({{ if or (.Working.Changed) (.Staging.Changed) (gt .StashCount 0) }}<#c678dd>{{ .HEAD }}</>{{ else }}<#98c379>{{ .HEAD }}</>{{ end }}{{ if (gt .Ahead 0)}}<#56b6c2>{{ .BranchStatus }}</>{{ end }}{{ if (gt .Behind 0)}}<#56b6c2>{{ .BranchStatus }}</>{{ end }}{{ if .Staging.Changed }} <#98c379>{{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }} <#e06c75>{{ .Working.String }}</>{{ end }})",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#e5c07b",
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "> ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}