{
    "debug.closeReadonlyTabsOnEnd": true,
    "debug.console.closeOnEnd": true,
    "debug.console.fontFamily": "IBM Plex Mono, Fira Code Retina, Meslo",
    "debug.console.fontSize": 18,
    "debug.hideLauncherWhileDebugging": true,
    "debug.showVariableTypes": true,
    "debug.terminal.clearBeforeReusing": true,
    "debugpy.debugJustMyCode": true,
    "debugpy.showPythonInlineValues": true,
    "editor.fontFamily": "IBM Plex Mono, Fira Code Retina, Meslo",
    "editor.fontSize": 18,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.defaultProfile.osx": "bash",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.profiles.osx": {
        "bash": {
            "args": [
                "-il"
            ],
            "icon": "terminal-bash",
            "path": "/opt/homebrew/bin/bash"
        }
    },
    "window.zoomLevel": 1,
    "windsurf.autoExecutionPolicy": "off",
    "windsurf.autocompleteSpeed": "default",
    "windsurf.chatFontSize": "default",
    "windsurf.enableSupercomplete": false,
    "windsurf.enableTabToJump": false,
    "windsurf.explainAndFixInCurrentConversation": true,
    "windsurf.openRecentConversation": true,
    "windsurf.rememberLastModelSelection": true,
    "workbench.colorTheme": "One Dark Pro Mix",
    "workbench.sideBar.location": "right"
}