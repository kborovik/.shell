{
  "agent": {
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-1"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_width": 900,
    "default_height": 400,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-1"
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "agent_font_size": 34,
  "buffer_font_size": 34,
  "buffer_font_family": "BlexMono Nerd Font Mono",
  "ui_font_size": 32,
  "ui_font_family": "BlexMono Nerd Font",
  "icon_theme": "Catppuccin Macchiato",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Macchiato - No Italics",
    "dark": "Catppuccin Macchiato - No Italics"
  },
  "minimap": {
    "show": "auto"
  },
  "cursor_blink": false,
  "drop_target_size": 1.0,
  "show_whitespaces": "boundary",
  "scroll_beyond_last_line": "off",
  "use_smartcase_search": true,
  "tab_size": 2,
  "prettier": {
    "singleQuote": true
  },
  "max_tabs": 8,
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "project_panel": {
    "default_width": 700,
    "dock": "right"
  },
  "outline_panel": {
    "default_width": 700,
    "dock": "right"
  },
  "collaboration_panel": {
    "default_width": 700,
    "dock": "right"
  },
  "git_panel": {
    "default_width": 700,
    "dock": "right"
  },
  "notification_panel": {
    "default_width": 700,
    "dock": "right"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "terminal": {
    "shell": {
      "program": "/usr/bin/fish"
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "languages": {
    "Python": {
      "language_servers": [
        "pyright",
        "ruff",
        "..."
      ],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        },
        {
          "code_actions": {
            "source.fixAll.ruff": false,
            "source.organizeImports.ruff": true
          }
        }
      ]
    },
    "Markdown": {
      "format_on_save": "off",
      "prettier": {
        "allowed": true,
        "proseWrap": "preserve",
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true
      }
    },
    "Fish": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "/usr/bin/fish",
          "arguments": [
            "-c",
            "fish_indent",
            "{buffer_path}"
          ]
        }
      }
    }
  },
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ]
  }
}
