{
  "SQL-Formatter-VSCode.functionCase": "upper",
  "SQL-Formatter-VSCode.logicalOperatorNewline": "after",
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[markdown]": {
    "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/",
    "cSpell.advanced.feature.useReferenceProviderWithRename": true,
    "cSpell.fixSpellingWithRenameProvider": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.quickSuggestions": {
      "comments": "off",
      "other": "off",
      "strings": "on"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "cSpell.enabled": true,
  "cSpell.userWords": [
    "varchar"
  ],
  "chat.commandCenter.enabled": false,
  "chat.editor.fontFamily": "IBM Plex Mono, Fira Code",
  "chat.editor.fontSize": 17,
  "cody.autocomplete.formatOnAccept": true,
  "cody.suggestions.mode": "autocomplete",
  "debugpy.debugJustMyCode": false,
  "diffEditor.codeLens": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.colorDecorators": false,
  "editor.defaultFormatter": null,
  "editor.detectIndentation": true,
  "editor.fontFamily": "IBM Plex Mono, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.showToolbar": "onHover",
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "files.associations": {
    "**/templates/*.yaml": "helm",
    "**/templates/*.yml": "helm",
    "*.bqsql": "sql",
    "*.hcl": "terraform",
    "*.service": "toml",
    "*.sql": "postgres",
    "*.tfvars": "terraform",
    "*.toml": "toml",
    "main.yaml": "ansible"
  },
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.confirmSync": false,
  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "prompt",
  "html.format.extraLiners": "head, body, footer, /html",
  "html.format.maxPreserveNewLines": 1,
  "redhat.telemetry.enabled": false,
  "ruff.fixAll": false,
  "ruff.lineLength": 120,
  "ruff.nativeServer": "on",
  "security.workspace.trust.untrustedFiles": "open",
  "sortJSON.contextMenu": {
    "sortJSONAlphaNum": false,
    "sortJSONAlphaNumReverse": false,
    "sortJSONKeyLength": false,
    "sortJSONKeyLengthReverse": false,
    "sortJSONReverse": false,
    "sortJSONType": false,
    "sortJSONTypeReverse": false,
    "sortJSONValues": false,
    "sortJSONValuesReverse": false
  },
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/usr/bin/bash"
    }
  },
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "disabled"
  },
  "window.newWindowProfile": "Default",
  "window.zoomLevel": 2,
  "workbench.colorTheme": "One Dark Pro Mix",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "[dynamic csv]": {
    "editor.inlayHints.maximumLength": 0
  },
  "[csv]": {
    "editor.inlayHints.maximumLength": 0
  }
}